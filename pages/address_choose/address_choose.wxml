<!--pages/address_choose/address_choose.wxml-->
<view class="recive-container">
  <block wx:for="{{recive}}">
    <navigator class="recive-item">
      <text class="recive-name">{{item.name}}</text>
      <text class="recive-phone">{{item.phone}}</text>
      <text class="recive-address">{{item.address}}</text>
      <navigator class="recive-edit">编辑</navigator>
    </navigator>
  </block>
</view>

<view class="bottom-container">
  <navigator class="new-recive" url="/pages/add_address/add_address">+新建地址</navigator>
</view>