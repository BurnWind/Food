/* pages/classification/classification.wxss */
@import "/pages/template/template.wxss";

/* 分类栏 */
.classify-container{
  white-space: nowrap;
  margin-top: 10px;
  height:50rpx;
  padding-bottom: 5px;
  border-bottom: 1px solid #D3B579;
}
.classify-button{
  display: inline-block;
  width:180rpx;
  height:50rpx;
  font-size:28rpx;
  color:#000;
  background: #fff;
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
}
.classify-button::after{
  border:none;
}
.button-active{
  color:#fff;
  background: #D3B579;
}
