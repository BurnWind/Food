/* pages/classification/classification.wxss */
/* 搜索框 */
.search-container{
  box-sizing: border-box;
  width: 100%;
  height:36px;
  background-color: #eee;
  padding:5px 10px;
}
.search-form{
  position: relative;
  display:block;
  background-color: #fff;
  width: 100%;
  height:26px;
  border-radius: 3px;
}
.search-icon{
  display: inline-block;
  position: absolute;
  top:5px;
  left:10px;

  width:16px;
  height:26px;
  line-height: 26px;
}
.search-input{
  position: absolute;
  left:35px;
  display:inline-block;
  width:85%;
  height:26px;
  line-height: 26px;
  font-size: 14px;
  min-height: 16px;
}


/* 分类栏 */
.classify-container{
  height:50px;
}