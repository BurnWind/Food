/**index.wxss**/
/* banner图 */
swiper{
  height:7rem;
}
.swiper-item{
  width:100%;
  height:7rem;
  position: relative;
  align-items: center;
  justify-content: center;

}
/* 搜索框 */
.search-container{
  box-sizing: border-box;
  width: 100%;
  height:36px;
  background-color: #eee;
  padding:5px 10px;
}
.search-form{
  position: relative;
  display:block;
  background-color: #fff;
  width: 100%;
  height:26px;
  border-radius: 3px;
}
.search-icon{
  display: inline-block;
  position: absolute;
  top:5px;
  left:10px;

  width:16px;
  height:26px;
  line-height: 26px;
}
.search-input{
  position: absolute;
  left:35px;
  display:inline-block;
  width:85%;
  height:26px;
  line-height: 26px;
  font-size: 14px;
  min-height: 16px;
}


/* 热销商品展示 */
.product-container{
  width:100%;
  display: flex;
  flex-wrap:wrap;
}
.product-item{
  position: relative;
  width:9rem;
  border-radius: 5px;
  margin:8px 0;
  border:1px solid #D3B579;
  margin-left: calc((100% - 18rem) / 3);
}
.product-img{
  width:100%;
  height:9rem;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.product-text{
  display: block;
  padding-left: 10px;
  height:30px;
  line-height: 30px;
  font-size:14px;
  font-weight: bold;
  text-overflow: ellipsis;
  background-color: #D3B579;
  color:#fff;
}
.product-price{
  display: block;
  margin-left: 10px;
  height:30px;
  line-height: 30px;
  color:#D3B579;
  margin-top:5px;
  margin-bottom: 5px;
  font-size:20px;
}
.product-button{
  position:absolute;
  line-height: 20px;
  right:8px;
  bottom:7px;
  width: 70px;
  height:20px;
  border-radius: 10px;
  font-size:14px;
  text-align: center;
  color:#fff;
  background: #D3B579;
}



