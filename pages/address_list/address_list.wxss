/* pages/address_list/address_list.wxss */
.recive-container{
  width:100%;
  margin-bottom:100rpx;
}
.recive-item{
  width:100%;
  height:130rpx;
  padding:20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f8f8f8;
  position: relative;
}
.recive-name{
  position: absolute;
  top:20rpx;
  left:20rpx;
  font-size:28rpx;
  font-weight: bold;
}
.recive-phone{
  position: absolute;
  top:20rpx;
  left:30%;
  font-size:28rpx;
}
.recive-address{
  position: absolute;
  bottom:20rpx;
  left:20rpx;
  font-size:24rpx;
  width:70%;
}
.recive-edit{
  position: absolute;
  top:50%;
  right:20rpx;
  margin-top:-14rpx;
  font-size:28rpx;
}

.bottom-container{
  position: fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  background-color: #f8f8f8;
  padding:15rpx;
  box-sizing: border-box;
}
.new-recive{
  width:60%;
  height:70rpx;
  margin: 0 auto;
  background-color: #D3B579;
  color:#fff;
  line-height: 70rpx;
  text-align: center;
  font-size:28rpx;
  border-radius: 35rpx;
}